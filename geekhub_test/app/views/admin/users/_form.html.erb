<% if flash.notice %>
	<div><%= flash.notice %></div>
<% end %>

<%= form_with model: @user, local: true do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Create user" %>
  </div>
<% end %>