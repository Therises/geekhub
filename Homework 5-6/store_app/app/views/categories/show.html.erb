<%= link_to "Back", store_path(@category.store_id) %>

<h1>Showing <%= @category.name %></h1>
<%= image_tag(@category.image_url(:thumb)) if @category.image? %>

<h2>Create new product:</h2>
<%= render 'products/form', method: :post, path: category_products_path(@category), btn_name: 'Create product' %>

<% unless @products.empty? %>
<h2>Products in this category:</h2>
	<ul>
		<% @products.each do |a| %>
		<li>
			<p><%= a.name %></p>
			<p>
				<%= link_to "Show", product_path(a) %>
				<%= link_to "Edit", edit_product_path(a) %>
				<%= link_to "Delete", product_path(a), method: :delete %>
			</p>
		</li>
		<% end %>
	</ul>
<% end %>

<%= will_paginate @products %>