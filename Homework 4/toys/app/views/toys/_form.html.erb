<%= form_with model: @toy, local: true do |f| %>

	<% if @toy.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@toy.errors.count, 'error') %> prohibited this entry from being saved:
			</h2>
			<ul>
				<%= @toy.errors.full_messages.each do |m| %>
				<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<b>Toy name: </b><%= f.text_field :name %>
