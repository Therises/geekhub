<%= form_with model: @char, local: true do |f| %>
	<% if @char.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@char.errors.count, 'error') %> prohibited this entry from saving:
			</h2>
			<ul>
				<% @char.errors.full_messages.each do |m| %>
					<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>Character's name: <%= f.text_field :name %></p>
	<p>Character's role: <%= f.text_field :role %></p>
	<p><%= f.submit %></p>

<% end %>