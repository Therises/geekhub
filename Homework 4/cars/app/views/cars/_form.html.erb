<%= form_with model: @car, local: true do |f| %>


	<% if @car.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@car.errors.count, 'error') %>
				prohibited this entry from being saved:
			</h2>
			<ul>
				<% @car.errors.full_messages.each do |m| %>
					<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<b>Производитель:</b><%= f.text_field :manufacturer %>
	</p>
	<p>
		<b>Модель:</b><%= f.text_field :model %>
	</p>
	<p>
		<b>Год выпуска:</b><%= f.number_field :yop %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
