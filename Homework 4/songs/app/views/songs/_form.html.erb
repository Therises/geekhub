<%= form_with model: @song, local: true do |f| %>
	
	<% if @song.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@song.errors.count, 'error') %> prohibited from creation this entry:
			</h2>
			<ul>
				<% @song.errors.full_messages.each do |m| %>
					<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>Title: <%= f.text_field :title %></p>
	<p>Artist: <%= f.text_field :artist %></p>
	<p>Album: <%= f.text_field :album %></p>
	<p><%= f.submit %></p>
<% end %>