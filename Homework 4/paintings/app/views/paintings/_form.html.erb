<%= form_with model: @painting, local: true do |f| %>
	<% if @painting.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@painting.errors.count, 'error') %> prohibited entry from saving:
			</h2>
			<ul>
				<% @painting.errors.full_messages.each do |m| %>
					<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>Painting's title: <%=f.text_field :title %></p>
	<p>Painting's artist: <%=f.text_field :artist %></p>
	<p>Painting's year: <%=f.number_field :year %></p>
	<p><%= f.submit %></p>
<% end %>