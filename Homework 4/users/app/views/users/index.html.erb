<h1>All Users</h1>

<%= link_to 'Create User', new_user_path %>

<table>
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Email</th>
		<th colspan="3"></th>
	</tr>

	<% @users.each do |u| %>
		<tr>
			<td><%= u.name %></td>
			<td><%= u.age %></td>
			<td><%= u.email %></td>
			<td><%= link_to 'Show', user_path(u) %></td>
			<td><%= link_to 'Update', edit_user_path(u) %></td>
			<td><%= link_to 'Delete', user_path(u), method: :delete,
							data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>